<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "whatsnext.svg", height:50 %>
  <% end %>

   <div class="search d-flex">
    <%= render 'shared/search' %>
  </div>

  <div class="d-flex " id="navbarSupportedContent">
    <div class="plus">
      <% if !@hide_goal_cta %>
        <%= link_to new_goal_path, class: "" do %>
          <%= image_tag "btn-flat.svg", height:50 %>
        <% end %>
      <% end %>
    </div>
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item dropdown">
          <%= image_tag "frieda.jpeg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Dashboard", dashboard_goals_path, class: "dropdown-item" %>
            <%= link_to "Magazine / User stories", "#", class: "dropdown-item" %>
            <%= link_to "My Account", "#", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
        <%= image_tag "frieda.jpeg", class: "avatar", alt: "avatar" %>
      <% end %>
    </ul>
  </div>
</div>


